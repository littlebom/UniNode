# ── Application ──────────────────────────────────────────
NODE_ENV=development
PORT=3010
API_PREFIX=unilink/api/v1

# ── University Identity ───────────────────────────────────
NODE_ID=tu.ac.th
NODE_NAME=มหาวิทยาลัยธรรมศาสตร์
NODE_NAME_EN=Thammasat University
NODE_DID=did:web:tu.ac.th
NODE_DOMAIN=tu.ac.th

# ── Registry Connection ───────────────────────────────────
REGISTRY_URL=http://localhost:3000/api/v1
REGISTRY_NODE_JWT=your-node-jwt-issued-by-registry

# ── Database (PostgreSQL) ─────────────────────────────────
DATABASE_URL=postgresql://uninode:password@localhost:5433/uninode_tu
DATABASE_SSL=false

# ── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=1

# ── HashiCorp Vault ───────────────────────────────────────
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SIGNING_KEY_PATH=tu-ac-th
VAULT_MOUNT_PATH=transit

# ── JWT ───────────────────────────────────────────────────
JWT_SECRET=your-jwt-secret-min-64-chars-here
JWT_EXPIRES_IN=1h

# ── Aggregate Sync ────────────────────────────────────────
AGGREGATE_SYNC_CRON=0 2 * * *
AGGREGATE_SYNC_ENABLED=true

# ── Rate Limiting ─────────────────────────────────────────
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=200

# ── CORS ──────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3011

# ── Logging ───────────────────────────────────────────────
LOG_LEVEL=debug
LOG_FORMAT=pretty
